# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=securechat-encrypted-files

# File Upload Configuration
MAX_FILE_SIZE=104857600
FILE_EXPIRATION_DAYS=90

# Existing environment variables
MONGODB_URI=mongodb://localhost:27017/securechat
JWT_SECRET=your_jwt_secret_here_change_this_in_production
JWT_EXPIRES_IN=7d
BCRYPT_SALT_ROUNDS=12

# Server Configuration
NODE_ENV=development
PORT=3001

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
UPLOAD_RATE_LIMIT_WINDOW_MS=900000
UPLOAD_RATE_LIMIT_MAX=10
DOWNLOAD_RATE_LIMIT_WINDOW_MS=900000
DOWNLOAD_RATE_LIMIT_MAX=50